---
import Layout from "../layouts/Layout.astro";
import ProjectList from "../components/Projects.tsx";
import RedirectSection from "../components/RedirectSection";
import NavMenu from "../components/NavMenu";
---

<Layout title="Proyectos">
  <main
    class="w-full overflow-hidden h-full relative flex flex-col justify-between backdrop-blur-md rounded-xl border-2 border-black/45 bg-gradient-to-b from-black/90 via-slate-900/45 to-sky-950/70"
    transition:name="main"
  >
    <div
      class="w-full h-max flex flex-col items-center md:items-center p-3 text-slate-200"
    >
      <h1 class="text-4xl font-bold z-30" transition:name="projects">
        Proyectos
      </h1>
    </div>
    <div
      class="z-30 w-full h-full overflow-auto md:overflow-visible relative flex-1 drop-shadow-sm md:translate-y-10"
    >
      <ProjectList client:load />
    </div>
    <div
      class="w-[1200px] flex-[0.7] bg-gradient-to-b via-black to-[#092a52] from-transparent -rotate-[0deg] -translate-x-28 translate-y-4 z-10"
    >
    </div>
    <img
      src="/perfil.webp"
      alt="Marcelo Lencina"
      title="Marcelo Lencina image"
      class="absolute -left-14 bottom-8 drop-shadow-[-5px_0px_7px_rgba(0,0,0,1)] rotate-[32deg] blur-sm scale-150 md:scale-100"
    />
    <NavMenu client:load/>
    
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    max-height: 1080px;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  img {
    mask-image: linear-gradient(to right,
      10%,
      transparent
    );
  }
</style>
