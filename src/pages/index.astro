---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Inicio">
  <main
    class="w-full overflow-hidden h-full relative flex flex-col justify-between backdrop-blur-md rounded-xl border-2 border-black/45 bg-gradient-to-b from-black/90 via-slate-900/45 to-sky-950/70"
  >
    <div
      class="w-full h-max flex flex-col items-start md:items-center p-3 text-slate-200"
    >
      <h1 class="text-4xl font-bold">Marcelo Lencina</h1>
      <h2 class="text-2xl font-bold">Full Stack Developer</h2>
    </div>
    <div
      class="min-w-[1200px] w-screen h-80 bg-gradient-to-b from-black via-black to-[#1B477D]/50 -rotate-[40deg] -translate-x-28 -translate-y-10 z-10"
      
    >
    </div>
    <img
      src="/perfil.webp"
      alt="Marcelo Lencina"
      title="Marcelo Lencina image"
      class="absolute -left-14 bottom-8 drop-shadow-[-5px_0px_7px_rgba(0,0,0,1)] rotate-[32deg] scale-150 md:scale-100"
    />

    <a
      href="./about"
      class="z-50 absolute bottom-40 right-6 px-2 font-semibold border rounded-md hover:bg-white hover:text-black"
      transition:name="about">Sobre Mí</a
    >
    <a
      href="./projects"
      class="z-50 absolute bottom-24 right-6 px-2 font-semibold border rounded-md hover:bg-white hover:text-black"
      transition:name="projects"
      >Proyectos</a
    >
    <a
      href="./technologies"
      class="z-50 absolute bottom-8 right-6 px-2 font-semibold border rounded-md hover:bg-white hover:text-black"
      transition:name="technologies"
      >Tecnologías</a
    >
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    max-height: 1080px;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
